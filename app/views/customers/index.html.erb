<div class="elements" >

<div class="title">
  <h1> Customers</h1>
</div>

<id class="border">
  <% if policy(Customer).new? %>
    <%= link_to  'New Customer', new_customer_path, class: "button" %>
  <%end %>
</id>



  <%=form_tag(customers_path, method: :get) do %>
    <%= text_field_tag :term, params[:term], class: "search" , placeholder: 'Search by last name...'%>
        <%= submit_tag 'Search', name: nil, class:"submit" %>
  <% end %>



</div>
<table id ="customers" , align="center">
  <thead>
    <tr>
      <th>Gender</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"> Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.gender %></td>
      <td><%= customer.first_name %></td>
      <td><%= customer.last_name %></td>
      <td><%= customer.address %></td>
      <td><%= customer.email %></td>
      <td><%= customer.phone %></td>
      <td><%= link_to 'Show', customer, class:"action" %></td>
      <td><%= link_to 'Edit', edit_customer_path(customer), class:"action" if policy(customer).edit? %> </td>
      <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "action" if policy(customer).destroy?  %></td>
    </tr>
  <% end %>

  </tbody>
</table>


