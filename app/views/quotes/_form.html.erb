<%= form_with(model: quote, local: true) do |form| %>
  <% if quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
        <% quote.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <% if policy(Quote).info? %>
    <div class="field">
      <%= form.label :customer_id %>
      <%= form.collection_select :customer_id, Customer.all, :id, :full_name%>
    </div>

    <div class="field">
      <%= form.label :vehicle_id %>
      <%= form.collection_select :vehicle_id, Vehicle.all, :id, :vin%>
    </div>

    <div class="field">
      <%= form.label :user_id %>
      <%= form.collection_select :user_id, User.all, :id, :full_name%>
    </div>

  <%end %>

  <% if policy(Quote).sold? %>


    <div class="field">
      <%= form.label :Status %><br/>
      <%= form.select :sold, ['Pending','Sold'], :selected => 'Pending' %>
    </div>

  <%end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
