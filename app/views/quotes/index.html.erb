<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table>
  <thead>
  <tr>
    <th>Customer</th>
    <th>Employee</th>
    <th>Vehicle</th>
    <th>Markup</th>
    <th>Sales tax</th>
    <th>Total</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @quotes.each do |quote| %>
    <tr>
      <td><%= quote.customer %></td>
      <td><%= quote.employee %></td>
      <td><%= quote.vehicle %></td>
      <td><%= quote.markup %></td>
      <td><%= quote.sales_tax %></td>
      <td><%= quote.total %></td>
      <td><%= link_to 'Show', quote %></td>
      <td><%= link_to 'Edit', edit_quote_path(quote)  if policy(quote).edit? %></td>
      <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } if policy(quote).destroy?  %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if policy(Quote).new? %>
  <%= link_to 'New Quote', new_quote_path %>
<% end %>