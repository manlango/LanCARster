<!DOCTYPE html>
<html>
<head>
  <title> LanCARster </title>
</head>
<body class = "signupbody">

<div class = "signup-box">

<div class="title">
  <h1>New User Signup</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class = "formup">

    <div class="textbox">
      <%= f.label :first_name, class:"labels" %><br/>
      <%= f.text_field :first_name, autofocus: true, class:"fields" %> </div>

    <div class="textbox"><%= f.label :last_name, class:"labels" %><br/>
        <%= f.text_field :last_name, autofocus: true, class:"fields" %> </div>


      <div class="textbox"> <%= f.label :email, class:"labels" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"fields" %>
  </div>

      <div class="textbox">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= f.label :password , class:"labels"%>
      <%= f.password_field :password, autocomplete: "new-password",class:"fields"%>

  </div>

      <div class="textbox"> <%= f.label :password_confirmation, class:"labels" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"fields" %>
  </div>

    <p>

                                                                                                 </p>

      <div class="text-box"> <%= f.label :role , class: "labels"%>
    <%= f.select :role, options_for_select(["admin","agent", "sales", "finance", "inventory"] ), { include_blank: false }, {class:"fields" }%>
  </div>

    <div class="send">
      <p>  <%= f.submit 'Signup', :class => 'btn'%> </p>
    </div>
<% end %>

  </div>
</div>
</body>
</html>

