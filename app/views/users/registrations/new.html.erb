<div class="title">
  <h1>Create a New User </h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form">

  <div class="field">
    <p class = "text-box"><%= f.label :first_name, class:"labels" %>
      <%= f.text_field :first_name, autofocus: true, class:"fields" %> </p></div>

    <div class="field">
      <p class = "text-box"><%= f.label :last_name, class:"labels" %>
        <%= f.text_field :last_name, autofocus: true, class:"fields" %> </p></div>


    <div class="field">
      <p class = "text-box"> <%= f.label :email, class:"labels" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"fields" %></p>
  </div>

  <div class="field">
    <p class = "text-box">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= f.label :password , class:"labels"%>
      <%= f.password_field :password, autocomplete: "new-password",class:"fields"%>
    </p>
  </div>

  <div class="field">
    <p class = "text-box"> <%= f.label :password_confirmation, class:"labels" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"fields" %>  </p>
  </div>


  <div class="field">
    <p class = "text-box"> <%= f.label :role , class: "labels"%>
    <%= f.select :role, options_for_select(["admin","agent", "sales", "finance", "inventory"] ), { include_blank: false }, {class:"fields" }%></p>
  </div>

    <div class="send">
      <p>  <%= f.submit 'Signup', :class => 'submit'%> </p>
    </div>
<% end %>


